<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Catalog"
        tools:targetApi="31">


        <activity android:name=".StartActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ResetPasswordActivity" />
        <activity android:name=".ForgotPasswordActivity" />
        <activity android:name=".BonusCardActivity" />
        <activity android:name=".DeliveryActivity" />
        <activity android:name=".DrinksActivity" />
        <activity android:name=".SweetsActivity" />
        <activity android:name=".CannedActivity" />
        <activity android:name=".BakeryActivity" />
        <activity android:name=".FruitsActivity" />
        <activity android:name=".VegetablesActivity" />
        <activity android:name=".MeatActivity" />
        <activity android:name=".DairyActivity" />
        <activity android:name=".GrainsActivity" />

        <activity
            android:name=".Product"
            android:exported="false"
            tools:ignore="Instantiatable" />

        <activity
            android:name=".ProductListActivity"
            android:exported="true"
            android:label="@string/title_activity_product_list"
            android:theme="@style/Theme.Catalog" />

        <activity
            android:name=".HomeActivity"
            android:exported="true" />

        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.Catalog" />


        <activity
            android:name=".MainActivity"
            android:exported="true" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

    </application>
</manifest>
