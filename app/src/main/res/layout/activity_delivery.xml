<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:text="Оформление доставки"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_name"
            android:hint="Ваше имя"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_address"
            android:hint="Адрес доставки"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Телефон"
            android:inputType="phone"
            android:maxLength="13"
            android:digits="0123456789+"
            android:text="+7" />




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Способ оплаты"
            android:layout_marginTop="16dp"
            android:textStyle="bold"/>

        <RadioGroup
            android:id="@+id/rg_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rb_cash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Наличными при получении" />

            <RadioButton
                android:id="@+id/rb_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Картой курьеру" />
        </RadioGroup>

        <Button
            android:id="@+id/btn_confirm_delivery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Подтвердить заказ"
            android:layout_marginTop="24dp"
            style="@style/Widget.MaterialComponents.Button"
            android:textAllCaps="false"
            app:backgroundTint="#15A904"
            android:textColor="@android:color/white"/>
    </LinearLayout>
</ScrollView>
